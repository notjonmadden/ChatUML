<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- tweak radii and padding -->
    <corners
        android:radius="5dp" />
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />
    <!-- is size necessary here? set programmatically -->
    <size 
        android:width="0dp"
        android:height="0dp"/>
    <solid
        android:color="#4FE3CF" />
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />
</shape>